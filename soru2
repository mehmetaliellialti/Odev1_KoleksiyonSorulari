using System;

namespace Koleksiyonlar_Soru_2
{
    class Program
    {
        static void Main(string[] args)
        {
            int[] sayilar = new int[20];

            for (int i = 0; i < 20; i++)
            {
                Console.Write($"{i + 1}. sayıyı giriniz: ");
                sayilar[i] = int.Parse(Console.ReadLine());
            }

            Array.Sort(sayilar);

            int[] enKucuk3 = { sayilar[0], sayilar[1], sayilar[2] };
            int[] enBuyuk3 = { sayilar[17], sayilar[18], sayilar[19] };

            double kucukOrt = Ortalama(enKucuk3);
            double buyukOrt = Ortalama(enBuyuk3);

            Console.WriteLine("\nEn Küçük 3 Sayı:");
            Yazdir(enKucuk3);

            Console.WriteLine("Ortalama: " + kucukOrt);

            Console.WriteLine("\nEn Büyük 3 Sayı:");
            Yazdir(enBuyuk3);

            Console.WriteLine("Ortalama: " + buyukOrt);

            Console.WriteLine("\nOrtalama Toplamı: " + (kucukOrt + buyukOrt));

            Console.ReadKey();
        }

        static double Ortalama(int[] dizi)
        {
            int toplam = 0;
            foreach (int s in dizi)
                toplam += s;

            return (double)toplam / dizi.Length;
        }

        static void Yazdir(int[] dizi)
        {
            foreach (int s in dizi)
                Console.Write(s + " ");

            Console.WriteLine();
        }
    }
}
